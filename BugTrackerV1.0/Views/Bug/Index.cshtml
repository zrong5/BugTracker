@model BugTracker.Models.BugModels.BugIndexModel
@{
    ViewData["Title"] = "Index";
}

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Team</th>
            <th scope="col">Developer Assigned</th>
            <th scope="col">Urgency</th>
            <th scope="col">Status</th>
            <th scope="col">Created</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bug in Model.Bugs)
        {
            <tr onclick="location.href = '@(Url.Action("Detail", "Bug", new { id = bug.Id }))'">
                <th scope="row">@bug.Id</th>
                <td>@bug.Title</td>
                <td>@bug.Team</td>
                <td>@bug.AssignedTo</td>
                <td>@bug.Urgency</td>
                <td>@bug.Status</td>
                <td>@bug.CreatedOn</td>
            </tr>
        }
    </tbody>
</table>