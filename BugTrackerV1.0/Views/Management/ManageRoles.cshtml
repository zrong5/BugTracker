@model BugTracker.Models.ManagementModels.RoleIndexModel

@{
    ViewData["Title"] = "ManageRoles";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Assign Roles</h2>
            <form asp-controller="Management" asp-action="ManageRoles" method="post">
                <div class="form-group">
                    <label asp-for="UpdateModel.User" class="control-label"></label>
                    <select multiple class="form-control" asp-for="UpdateModel.User">
                        @foreach (var username in Model.Usernames)
                        {
                            <option>@username</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="UpdateModel.Role" class="control-label"></label>
                    <select multiple class="form-control" asp-for="UpdateModel.Role">
                        @foreach (var role in Model.Roles)
                        {
                            <option>@role</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" name="option" value="Assign" class="btn btn-dark" />
                    <input type="submit" name="option" value="Remove" class="btn btn-dark" />
                </div>
            </form>
        </div>
        <div class="col-6">
            <h2>Add Roles</h2>
            <form asp-controller="Management" asp-action="ManageRoles" method="post">
                <div class="form-group">
                    <label class="control-label">Role Title</label>
                    <input type="text" class="form-control" placeholder="Role title.." name="roleName">
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-dark" />
                </div>
            </form>
            <h2>Delete Roles</h2>
            <form asp-controller="Management" asp-action="DeleteRoles" method="post">
                <div class="form-group">
                    <label class="control-label">Role Title</label>
                    <select class="form-control" name="roleName">
                        @foreach (var role in Model.Roles)
                        {
                            <option>@role</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>





