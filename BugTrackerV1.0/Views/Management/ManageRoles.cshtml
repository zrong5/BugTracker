@model BugTracker.Models.ManagementModels.RoleIndexModel

@{
    ViewData["Title"] = "ManageRoles";
}

<div class="container">
    <div class="row" style="margin-top:15px">
        <div class="col">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    Assign Roles
                </div>
                <form asp-controller="Management" asp-action="ManageRolesAssignment" method="post" style="padding:15px">
                    <div class="form-group">
                        <label asp-for="UpdateModel.User" class="control-label"></label>
                        <select multiple class="form-control" asp-for="UpdateModel.User">
                            @foreach (var username in Model.Usernames)
                            {
                                <option>@username</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateModel.Role" class="control-label"></label>
                        <select multiple class="form-control" asp-for="UpdateModel.Role">
                            @foreach (var role in Model.Roles)
                            {
                                <option>@role</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="option" value="Assign" class="btn btn-info" />
                        <input type="submit" name="option" value="Remove" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>

        <div class="col">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    Add Roles
                </div>
                <form asp-controller="Management" asp-action="AddRoles" method="post" style="padding:15px">
                    <div class="form-group">
                        <label class="control-label">Role Title</label>
                        <input type="text" class="form-control" placeholder="Role title.." name="roleName">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-info" />
                    </div>
                </form>
            </div>
            <div class="card">
                <div class="card-header bg-dark text-light">
                    Delete Roles
                </div>
                <form asp-controller="Management" asp-action="DeleteRoles" method="post" style="padding:15px">
                    <div class="form-group">
                        <label class="control-label">Role Title</label>
                        <select class="form-control" name="roleName">
                            @foreach (var role in Model.Roles)
                            {
                                <option>@role</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    Employees
                </div>
                <table class="table table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Full Name</th>
                            <th scope="col">User</th>
                            <th scope="col">Email Address</th>
                            <th scope="col">Assigned Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.UserRoles)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.Username</td>
                                <td>@item.EmailAddress</td>
                                <td>@item.Roles</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





