@model BugTracker.Models.IdentityModels.LoginModel

@{
    ViewData["Title"] = "Login";
}

<body class="primary-background">
    <div class="container">
        <form asp-controller="Account" asp-action="Login" method="post" >
            <div class="row justify-content-center">
                <div class="col-3 vertical-center secondary-background rounded">
                    <h3 class="text-light text-center" style="padding:5px">Bug Tracker System</h3>
                    <h4 class="text-light text-center" style="padding:5px">Login</h4>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label text-light"></label>
                        <input asp-for="Username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label text-light"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>
                    <div class="form-group" style="padding:15px 0px 5px 0px">
                        <input type="submit" value="Login" class="btn btn-info btn-block"/>
                    </div>
                    <div class="form-group text-center">
                        <label class="control-label text-light">Create an account?</label>
                        <a asp-controller="Account" asp-action="Register" class="text-light"><u>Register</u></a>
                    </div>
                    <div class="form-group text-center">
                        <a asp-controller="Account" asp-action="RoleSelect" class="text-light"><u>Sign in as a demo user.</u></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>





