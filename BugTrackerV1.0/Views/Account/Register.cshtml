@model BugTracker.Models.IdentityModels.RegisterIndexModel

@{
    ViewData["Title"] = "Register";
}

    <body class="primary-background">
        <div class="container">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="row justify-content-center">
                    <div class="col-3 vertical-center secondary-background rounded">
                        <h3 class="text-light text-center" style="padding:5px">Bug Tracker System</h3>
                        <h4 class="text-light text-center" style="padding:5px">Register</h4>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username" class="control-label text-light"></label>
                            <input asp-for="Username" class="form-control" type="text" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="text-light">Team</label>
                            <select class="form-control" asp-for="Team">
                                @foreach (var team in Model.Options.TeamOptions)
                                {
                                    <option>@team.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label text-light"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label text-light"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label text-light"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmEmail" class="control-label text-light"></label>
                            <input asp-for="ConfirmEmail" class="form-control" type="email" />
                            <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding:15px 0px 5px 0px">
                            <input type="submit" value="Register" class="btn btn-info btn-block" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </body>
        

