@{
    ViewData["Title"] = "Role Select";
}

<body class="primary-background">
    <div class="container">
        <form asp-controller="Account" asp-action="RoleSelect" method="post">
            <div class="row justify-content-center">
                <div class="col-3 vertical-center secondary-background rounded">
                    <h3 class="text-light text-center" style="padding:5px">Bug Tracker System</h3>
                    <h4 class="text-light text-center" style="padding:5px">Demo User Login</h4>
                    <div class="row">
                        <div class="col-sm">
                            <div class="card text-light bg-info mb-3">
                                <input type="image" class="card-img-top" src="~/images/manageRoles.png" alt="Card image cap"
                                       asp-controller="Account" asp-action="RoleSelect" asp-route-roleName="Admin">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Admin</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="card text-light bg-info mb-3">
                                <input type="image" class="card-img-top" src="~/images/manageRoles.png" alt="Card image cap"
                                       asp-controller="Account" asp-action="RoleSelect" asp-route-roleName="Manager">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Manager</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm">
                            <div class="card text-light bg-info mb-3">
                                <input type="image" class="card-img-top" src="~/images/manageRoles.png" alt="Card image cap"
                                       asp-controller="Account" asp-action="RoleSelect" asp-route-roleName="Developer">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Developer</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="card text-light bg-info mb-3">
                                <input type="image" class="card-img-top" src="~/images/manageRoles.png" alt="Card image cap"
                                       asp-controller="Account" asp-action="RoleSelect" asp-route-roleName="Submitter">
                                <div class="card-body">
                                    <h5 class="card-title text-center">Submitter</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <label class="control-label text-light">Has an account?</label>
                        <a asp-controller="Account" asp-action="Login" class="text-light"><u>Login</u></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
